{% extends ':admin:plantilla.html.twig' %}

{% block headTitle %}<span class="color-letra">Categorias</span>{% endblock %}

{% block body %}

    <table class="table">

        {% for categoria in categorias %}
            <tr>
                <td style="font-weight: 900"><a href="{{ path('app_publicacionesQueTieneCategoria', {'nombre': categoria.nombre}) }}">{{ categoria.nombre }}</a></td>
                <td><a class="btn btn-primary" href="{{ path('app_editar_categoria_admin', {'id': categoria.id}) }}">editar</a></td>
                <td><a class="btn btn-danger" href="{{ path('app_admin_categoria_borrar', {'id': categoria.id}) }}">borrar</a></td>
            </tr>
        {% endfor %}
    </table>

        <div class="navigation">
        {{ knp_pagination_render(categorias) }}
    </div>
{% endblock %}





